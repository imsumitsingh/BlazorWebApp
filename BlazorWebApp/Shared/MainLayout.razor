    @code{

        protected BlazorWebApp.Models.CustomModal modal=new();
        protected BlazorWebApp.Models.ShowHideModal showhide=new();
        protected BlazorWebApp.Data.CurrentPage current;
        protected override async Task OnInitializedAsync()
        {
            current = new Data.CurrentPage();
            current.Orders = "active";

        }
        private string searchText = string.Empty;
        protected void ChangePage(string str)
        {
            current = new Data.CurrentPage();
            if (str == "Supplier")
                current.Suppliers = "active";
            if (str == "Order")
                current.Orders = "active";
            if (str == "Customer")
                current.Customers = "active";
            if (str == "Product")
                current.Products = "active";

        }
        protected void ToggleModal()
        {
            if (showhide.Visible)
            {
                
                showhide.Visible = false;
                
            }

            else
            {
                
                showhide.Visible = true;
               
            }
        }
    }

